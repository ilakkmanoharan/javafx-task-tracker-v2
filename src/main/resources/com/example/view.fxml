<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/17.0.8"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Controller">
    <Label text="Task Tracker" style="-fx-font-size: 20px;"/>
    <ListView fx:id="taskList"/>
    <HBox spacing="10">
        <TextField fx:id="taskInput" promptText="Enter task..."/>
        <Button text="Add" onAction="#addTask"/>
    </HBox>
</VBox>

